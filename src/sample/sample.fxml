<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10" >

    <children>
        <Label text="Juttasd el a robotot a célba!" GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.columnSpan="4" >
            <font>
                <Font size="40" name="Arial"/>
            </font>

        </Label>
        <TextArea fx:id="txtarea" prefHeight="300" prefWidth="250" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="3" minHeight="250" minWidth="150"/>
        <Button text="Indít" GridPane.columnIndex="3" GridPane.rowIndex="2" onAction="#printIt" fx:id="startBtn"/>
        <Button text="Töröl" GridPane.columnIndex="1" GridPane.rowIndex="2" onAction="#deleteAll" fx:id="clearBtn"/>
        <Button text="Újra" GridPane.columnIndex="2" GridPane.rowIndex="2" onAction="#reloadIt" fx:id="againBtn"/>
        <Canvas fx:id="canvas" GridPane.rowIndex="1" GridPane.columnIndex="4" height="600"  width="500" GridPane.rowSpan="3" />
        <Label fx:id="messageLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" prefHeight="100" prefWidth="800" GridPane.columnSpan="5" >
            <font>
                <Font size="20" name="Arial"/>
            </font>
        </Label>


    </children>

    <rowConstraints>
        <RowConstraints minHeight="100"/>
        <RowConstraints minHeight="250"/>
        <RowConstraints minHeight="50" />
        <RowConstraints minHeight="50" />
        <RowConstraints minHeight="50" />
    </rowConstraints>

    <columnConstraints>
        <ColumnConstraints minWidth="30" />
        <ColumnConstraints minWidth="80" />
        <ColumnConstraints minWidth="80" />
        <ColumnConstraints minWidth="50" />
        <ColumnConstraints minWidth="250" />
        <ColumnConstraints minWidth="30" />
    </columnConstraints>

</GridPane>