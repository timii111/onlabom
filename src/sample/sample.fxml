          xmlns:fx="http://javafx.com/fxml" alignment="TOP_LEFT" hgap="10" vgap="10" >

    <TextArea fx:id="txtarea" prefHeight="300" prefWidth="250" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Button text="Indít" GridPane.columnIndex="1" GridPane.rowIndex="0" onAction="#printIt" />
    <Button text="Töröl" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#deleteAll" />
</GridPane>